<%= form_for([@deck, @deck.energy_levels.build]) do |f| %>
  <div class="form-group">
  <%= f.hidden_field :deck_id %>
  <%= f.hidden_field :mood_type, value: "diamond" %> 
  </div>
  <div class="form-group">
      <%= f.label "1 to 5" %> 
      <%= f.number_field :target, autofocus: true, class: "form-control", placeholder: "Ambition Level" %>
    </div>
  <div class="actions btn-group">
    <%= f.submit "Submit Comment", class: "btn btn-xs" %>
  </div>
<% end %>

